{
  "name": "eduguide-ai",
  "version": "1.0.0",
  "description": "EduGuide AI - Holistic Student Evaluation System",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
